<%= provide(:page_title, 'Home | Punch') %>
<%= provide(:page_description, 'Punch description') %>
<%= provide(:page_url, password_reset_url) %>

<% content_for(:meta) do %>
<meta name="robots" content="noindex,nofollow">
<% end %>

<% content_for(:header) do %>
<%= render 'shared/auth_header' %>
<% end %>

<% content_for(:footer) do %>
<%= render 'shared/auth_footer' %>
<% end %>

<div class="auth-form centered">
  <%= render('shared/flash', type: 'error', message: flash[:alert], btn_clear_opened: true) if flash[:alert] %>
  <%= render('shared/flash', type: 'success', message: flash[:notice]) if flash[:notice] %>

  <div class="panel">
    <div class="panel-header text-center">
      <h1 class="panel-title h3 mt-10"><%= t('password_reset.new.title') %></h1>
      <p class="panel-subtitle"><%= t('password_reset.new.description') %></p>
    </div>
    <div class="panel-body">
      <%= form_with(model: @user, url: password_reset_url, method: :post, local: true) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-input', placeholder: t('password_reset.new.email') %>
        </div>
        <div class="form-group">
          <%= f.submit t('password_reset.new.send_link'), class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
