<div class="auth-form centered">
  <%= render('shared/flash', type: 'error', message: flash[:alert], btn_clear_opened: true) if flash[:alert] %>
  <%= render('shared/flash', type: 'success', message: flash[:notice]) if flash[:notice] %>

  <div class="panel">
    <div class="panel-header text-center">
      <h1 class="panel-title h3 mt-10">Forgot your password?</h1>
      <p class="panel-subtitle">Enter the email address you use to sign in, and weâ€™ll send you a link to reset your password.</p>
    </div>
    <div class="panel-body">
      <%= form_with(model: @user, url: password_reset_url, method: :post, local: true) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-input', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Send Link', class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
