<%= semantic_form_for(@national_holiday, builder: ActiveAdmin::FormBuilder, url: import_csv_admin_national_holidays_path) do |f| %>
  <%= f.inputs 'Import national holidays from CSV' do %>
    <%= f.input :country, as: :select, collection: NationalHoliday::COUNTRIES, required: true %>
    <%= f.input :file, as: :file, required: :true, hint: link_to('You can download csv template here', asset_url('national_holiday_template.csv')) %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, as: :button %>
  <% end %>
<% end %>
